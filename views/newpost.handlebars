<link href="./css/style.css" rel="stylesheet">
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card">
            <form class="form blog-form">
                <div class="form-group mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <input type="text" class="form-control form-input" id="subject" placeholder="Blog Subject">
                </div>
                <div class="form-group mb-3">
                    <label for="contentBody" class="form-label">Blog Content</label>
                    <textarea class="form-control form-input" id="content-body" rows="3"></textarea>
                </div>
                <div class="form-group mb-3">
                    <button class="btn btn-primary" type="submit">Submit Post</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
<script src="./js/buildpost.js"></script>
<script src="./js/logout.js"></script>