<link href="../css/style.css" rel="stylesheet">
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card">
            <p> Written by: {{user.name}}  <span class="date-tag">Date Posted:{{date_created}}</span> <span hidden id="post-id" value="{{id}}"></span></p>

            <form class="form edit-form">
                <div class="form-group mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <textarea type="text" class="form-control form-input" id="subject">{{subject}}</textarea>
                </div>
                <div class="form-group mb-3">
                    <label for="contentBody" class="form-label">Blog Content</label>
                    <textarea class="form-control form-input" id="content-body" rows="3">{{content_body}}</textarea>
                </div>
                <div class="form-group mb-3">
                    <button class="btn btn-primary" type="submit">Update Post</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>

<script src="../js/editpost.js"></script>
 <script src="../js/logout.js"></script>