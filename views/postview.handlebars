<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card my-3">
            <p> Written by: {{user.name}} <span class="date-tag">Date Posted:{{date_created}}</p></span>
            <h4 class="card-title border-bottom border-4">{{subject}} </h4>
            <br>
            <p>{{content_body}}</p>
            {{#if (check_user user_id session_id)}}
            <a href="/editpost/{{id}}"><button class="btn btn-primary" type="submit">Edit Post</button></a>
            {{else}}
            <a href="/newcomment/{{id}}"><button class="btn btn-primary" type="submit">Leave Comment</button></a>
            {{/if}}
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
{{#each comments as |comments|}}
{{> comment-details}}
{{/each}}